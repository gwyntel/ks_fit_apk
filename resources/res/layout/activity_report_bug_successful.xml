<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:id="@+id/bugId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bugId"
            android:layout_centerInParent="true"
            android:textIsSelectable="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/complete"
            android:layout_above="@+id/bugId"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/bugIdUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/bugUrl"
            android:layout_below="@+id/bugId"
            android:textIsSelectable="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bugIdUrl">
            <Button
                android:id="@+id/successOkBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_finish"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/reportBugContinueBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_bug_continue"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
