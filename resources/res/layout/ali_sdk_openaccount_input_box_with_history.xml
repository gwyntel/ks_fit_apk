<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:inputBox="http://schemas.android.com/apk/res-auto">
    <com.alibaba.sdk.android.openaccount.ui.widget.InputBoxWithClear
        android:gravity="center_vertical"
        android:id="@+id/input_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        inputBox:ali_sdk_openaccount_attrs_inputType="textVisiblePassword"
        inputBox:ali_sdk_openaccount_attrs_leftIconText="@string/ali_sdk_openaccount_icon_user"/>
    <Button
        android:textSize="20sp"
        android:textColor="#cccccc"
        android:id="@+id/open_history"
        android:background="@null"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="-15dp"
        android:minWidth="50dp"
        android:text="@string/ali_sdk_openaccount_dynamic_icon_arrow_down"/>
</merge>
