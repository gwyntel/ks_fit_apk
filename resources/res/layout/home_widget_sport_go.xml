<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/widget_container"
    android:background="@drawable/widget_background"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="visible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_widget"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/sport_go"
                    android:id="@+id/locale_sport_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_unit"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/plan_goal"
                    android:id="@+id/sport_train_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/sport_go"
                android:id="@+id/locale_today_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_cal"/>
            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/plan_goal"
                android:id="@+id/sport_train_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/sport_go_btn"
        android:background="@drawable/rounded_background"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/locale_tv_sport_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_sport"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
