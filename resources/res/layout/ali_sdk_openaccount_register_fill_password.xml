<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:inputBox="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alibaba.sdk.android.openaccount.ui.widget.PasswordInputBox
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/password_input_box"
                android:background="@drawable/ali_sdk_openaccount_bg_corners_white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                inputBox:ali_sdk_openaccount_attrs_hint="@string/ali_sdk_openaccount_text_login_password"/>
            <TextView
                android:textSize="14sp"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <com.alibaba.sdk.android.openaccount.ui.widget.PasswordLevelView
                android:id="@+id/password_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.alibaba.sdk.android.openaccount.ui.widget.NextStepButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
