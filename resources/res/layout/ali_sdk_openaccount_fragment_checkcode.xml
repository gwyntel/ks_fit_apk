<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:user="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ali_user_phone_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/ali_user_resend_checkcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ali_sdk_openaccount_text_count_down"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/ali_user_checkcode_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ali_sdk_openaccount_text_confirm"/>
</LinearLayout>
