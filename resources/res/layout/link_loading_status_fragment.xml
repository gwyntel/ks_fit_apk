<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/link_status_loading_bg"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/link_status_loading_view"
        android:background="@drawable/ic_loading_icon_bg"
        android:layout_width="@dimen/link__loading_view_size"
        android:layout_height="@dimen/link__loading_view_size">
        <ImageView
            android:id="@+id/link_status_loading_icon"
            android:layout_width="@dimen/link__loading_view_icon_size"
            android:layout_height="@dimen/link__loading_view_icon_size"
            android:src="@drawable/ic_loading_icon"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#999"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/link_status_loading_text"
            android:visibility="gone"
            android:layout_width="@dimen/link__loading_view_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_below="@+id/link_status_loading_icon"
            android:layout_centerHorizontal="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"/>
    </RelativeLayout>
</FrameLayout>
